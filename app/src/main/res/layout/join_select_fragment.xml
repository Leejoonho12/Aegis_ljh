<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".ui.joinselect.JoinSelectFragment">

    <TextView
        android:id="@+id/tv_joinSelect_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="회원관리"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_worker_list"
        android:layout_width="335dp"
        android:layout_height="401dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"></ListView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="#EDEDED"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joinSelect_title">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="이름"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아이디"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="권한"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="비콘 No."
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_worker_list" />

</androidx.constraintlayout.widget.ConstraintLayout>